<%= form_for([product]) do |f|%>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :price %>
  <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any %><br>

  <%= f.label :url %>
  <%= f.text_field :url, :size=>"100" %><br>

  <%= f.label :image_link %>
  <%= f.text_field :image_link, :size=>"100" %><br>
</p>

  <%= f.submit %>
<% end %>
