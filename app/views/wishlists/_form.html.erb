<%= form_for([user, wishlist]) do |f|%>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :budget %>
  <%= f.number_field :budget, value: number_to_currency(f.object.budget.to_f, delimiter: '', unit: ''), step: :any %><br>

  <%= f.label :notes %>
  <%= f.text_area :notes, "cols" => 40, "rows" => 10 %><br>
</p>

  <%= f.submit %>
<% end %>
