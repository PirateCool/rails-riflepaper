<h1>Categories</h1>

<div>
    <%= link_to("Create a new Category", new_category_path) %>
</div>

<button class="js-order">Sort by A-Z</button>

<div class="categories-container">
    <% @categories.each do |category| %>
        <div class="category-square">
            <%= link_to("#{category.name}", category_path(category)) %><br>
            <img class="category-image" src="<%=category.img_url%>"><br>
        </div>
    <% end %>
</div>

<!-- onClick event listener to Sort Categories -->
<script type="text/javascript" charset="utf-8">
  $( ".js-order" ).click(function() {
    sortCategories();
  });
</script>